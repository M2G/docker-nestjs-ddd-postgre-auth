    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest-mock-extended": "^4.0.0-beta1",
    "module-alias": "^2.2.3",
    "nestjs-i18n": "^10.5.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
